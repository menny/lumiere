<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="120dp"
             android:layout_height="120dp"
             android:layout_margin="4dp">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
               android:id="@+id/image_view"
               android:contentDescription="@string/loaded_image_content_description"
               android:scaleType="centerCrop"/>

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_margin="4dp"
                  android:layout_gravity="bottom|end">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/image_fav_action" android:src="@drawable/ic_media_fav_off" android:visibility="gone"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/image_share_action" android:src="@drawable/ic_media_share"/>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:id="@+id/image_save_action" android:src="@drawable/ic_media_save"/>
    </LinearLayout>

</FrameLayout>